{
    "logger": { 
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "standard": { 
                "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
            }
        },
        "handlers": { 
            "console": { 
                "level": "DEBUG",
                "formatter": "standard",
                "class": "logging.StreamHandler",
                "stream": "ext://sys.stderr"
            },
            "file": { 
                "level": "INFO",
                "formatter": "standard",
                "class": "logging.handlers.RotatingFileHandler",
                "filename": "overlord-bot.log",
                "maxBytes": 1048576,
                "backupCount": "4"
            }
        },
        "root": {
            "handlers": ["console","file"],
            "level": "INFO"
        }
    },
    "bot": {
        "commands": {
            "ping": "control.ping",
            "calc-channel-stats": "control.calc_channel_stats",
            "calc-message-stats": "control.calc_message_stats",
            "calc-vc-stats": "control.calc_vc_stats"
        },
        "control": {
            "prefix": "ov/"
        },
        "user": {
            "leave": {
                "keep": false
            }
        },
        "event": {
            "user": {
                "join": {
                    "track": true,
                    "weight": 100
                },
                "update": {
                    "track": true
                },
                "leave": {
                    "track": true
                }
            },
            "message": {
                "new": {
                    "track": true,
                    "weight": 1
                },
                "delete": {
                    "track": true,
                    "weight": -1
                }
            },
            "voice": {
                "join": {
                    "track": true,
                    "weight": 1
                },
                "leave": {
                    "track": true
                },
                "afk": {
                    "ignore": true
                }
            }
        }
    }
}
