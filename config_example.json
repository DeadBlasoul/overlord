{
    "logger": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "standard": {
                "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
            }
        },
        "handlers": {
            "console": {
                "level": "DEBUG",
                "formatter": "standard",
                "class": "logging.StreamHandler",
                "stream": "ext://sys.stderr"
            },
            "file": {
                "level": "INFO",
                "formatter": "standard",
                "class": "logging.handlers.RotatingFileHandler",
                "filename": "overlord-bot.log",
                "maxBytes": 1048576,
                "backupCount": "4"
            }
        },
        "root": {
            "handlers": [
                "console",
                "file"
            ],
            "level": "INFO"
        }
    },
    "bot": {
        "commands": {
            "ping": "control.ping",
            "sync-roles": "control.sync_roles",
            "update-ranks": "control.update_user_ranks",
            "update-rank": "control.update_user_rank",
            "reload-channel": "control.reload_channel_history",
            "calc-message-stats": "control.calc_message_stats",
            "calc-vc-stats": "control.calc_vc_stats",
            "user-stats": "control.get_user_stats",
            "clear-data": "control.clear_data",
            "conf-reload": "control.reload_config",
            "conf-save": "control.save_config",
            "conf-get": "control.get_config_value",
            "conf-set": "control.alter_config",
            "ranks": "control.get_ranks",
            "ranks-add": "control.add_rank",
            "ranks-remove": "control.remove_rank",
            "ranks-edit": "control.edit_rank"
        },
        "control": {
            "prefix": "ov/",
            "roles": ["CEO", "Director", "Supervisor"]
        },
        "user": {
            "leave": {
                "keep": false
            }
        },
        "event": {
            "user": {
                "join": {
                    "track": true
                },
                "update": {
                    "track": true
                },
                "leave": {
                    "track": true
                }
            },
            "message": {
                "new": {
                    "track": true
                },
                "delete": {
                    "track": true
                }
            },
            "voice": {
                "join": {
                    "track": true
                },
                "leave": {
                    "track": true
                },
                "afk": {
                    "ignore": true
                }
            }
        },
        "ranks": {
            "admin": ["CEO", "Director", "Supervisor", "Operator"],
            "role": {
                "Shitposter": {
                    "weight": 2,
                    "messages": 10,
                    "vc": 20
                },
                "Visitor": {
                    "weight": 3,
                    "messages": 123,
                    "vc": 1234
                }
            }
        }
    }
}