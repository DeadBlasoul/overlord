{
    "logger": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "standard": {
                "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
            }
        },
        "handlers": {
            "console": {
                "level": "DEBUG",
                "formatter": "standard",
                "class": "logging.StreamHandler",
                "stream": "ext://sys.stderr"
            },
            "file": {
                "level": "INFO",
                "formatter": "standard",
                "class": "logging.handlers.RotatingFileHandler",
                "filename": "overlord-bot.log",
                "maxBytes": 1048576,
                "backupCount": 4
            }
        },
        "root": {
            "handlers": [
                "console",
                "file"
            ],
            "level": "INFO"
        }
    },
